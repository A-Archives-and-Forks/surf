{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["*"],
  "ui": "tui",
  "tasks": {
    "@horizon/backend#build": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/backend#dev": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/trackpad#build": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/trackpad#dev": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/backend-server#build": {
      "outputs": ["backend-server"]
    },
    "@horizon/backend-server#dev": {
      "outputs": ["backend-server"]
    },
    "desktop#build": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mwl": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac:x64": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac:arm": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:lin:x64": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:lin:arm": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:win:x64": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:linux": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "@horizon/tela#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/dragcula#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/cmdk-sv#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/types#build": {
      "outputs": [".build/**"],
      "outputLogs": "new-only"
    },
    "@horizon/core#dev:tailwind": {
      "outputs": ["src/output.css"],
      "outputLogs": "new-only",
      "persistent": true
    },
    "@horizon/core#build:tailwind": {
      "outputs": ["src/output.css"],
      "outputLogs": "new-only"
    },
    "build:app": {
      "dependsOn": [
        "@horizon/core#build:tailwind",
        "@horizon/dragcula#build",
        "@horizon/trackpad#build",
        "@horizon/backend#build",
        "@horizon/backend-server#build",
        "@horizon/cmdk-sv#build"
      ],
      "outputs": [".dist/**", ".out/**"]
    },
    "build": {
      "dependsOn": ["build:app"],
      "outputs": [".dist/**", ".out/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "desktop#dev": {
      "dependsOn": [
        "@horizon/dragcula#build",
        "@horizon/trackpad#dev",
        "@horizon/backend#dev",
        "@horizon/backend-server#dev",
        "@horizon/cmdk-sv#build"
      ],
      "outputs": [".dist/**", ".out/**"]
    },
    "dev": {
      "dependsOn": [
        "@horizon/dragcula#build",
        "@horizon/trackpad#dev",
        "@horizon/backend#dev",
        "@horizon/backend-server#build",
        "@horizon/cmdk-sv#build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}

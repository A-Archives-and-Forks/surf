{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "@horizon/backend#build": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "horizon#build:mwl": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "horizon#build:mac": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "horizon#build:mac:arm": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "horizon#build:win": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "horizon#build:linux": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "@horizon/tela#build": {
      "outputs": [".dist/**"],
      "outputMode": "new-only"
    },
    "@horizon/types#build": {
      "outputs": [".build/**"],
      "outputMode": "new-only"
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "horizon#dev": {
      "dependsOn": ["@horizon/tela#build", "@horizon/backend#build"]
    },
    "dev": {
      "dependsOn": ["@horizon/tela#build", "@horizon/backend#build"],
      "cache": false,
      "persistent": true
    }
  }
}

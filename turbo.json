{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "@horizon/backend#build": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/backend#dev": {
      "dependsOn": [],
      "outputs": [".dist/**", "index.node"]
    },
    "@horizon/backend-server#build": {
      "outputs": ["backend-server"]
    },
    "@horizon/backend-server#dev": {
      "outputs": ["backend-server"]
    },
    "desktop#build:mwl": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac:x64": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:mac:arm": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:win:x64": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "desktop#build:linux": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".out/**"]
    },
    "@horizon/tela#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/dragcula#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/cmdk-sv#build": {
      "outputs": [".dist/**"],
      "outputLogs": "new-only"
    },
    "@horizon/types#build": {
      "outputs": [".build/**"],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "^build",
        "@horizon/tela#build",
        "@horizon/backend#build",
        "@horizon/backend-server#build",
        "@horizon/cmdk-sv#build"
      ],
      "outputs": [".dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "desktop#dev": {
      "dependsOn": [
        "@horizon/dragcula#build",
        "@horizon/tela#build",
        "@horizon/backend#dev",
        "@horizon/backend-server#build",
        "@horizon/cmdk-sv#build"
      ],
      "outputs": [".dist/**", ".out/**"]
    },
    "dev": {
      "dependsOn": [
        "@horizon/dragcula#build",
        "@horizon/tela#build",
        "@horizon/backend#dev",
        "@horizon/backend-server#build",
        "@horizon/cmdk-sv#build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}

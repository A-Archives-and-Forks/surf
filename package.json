{
  "name": "horizon",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:horizon": "turbo dev --filter=horizon",
    "build": "turbo build",
    "build:packages": "turbo build --filter=!horizon",
    "build:horizon": "yarn workspace horizon build",
    "build:horizon:mac": "yarn turbo run horizon#build:mac",
    "build:horizon:win": "yarn turbo run horizon#build:win",
    "build:horizon:linux": "yarn turbo run horizon#build:linux",
    "build:tela": "yarn workspace @horizon/tela build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,svelte}\""
  },
  "devDependencies": {
    "@horizon/eslint-config": "*",
    "@horizon/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "electron",
      "electron-builder",
      "electron-vite"
    ]
  }
}

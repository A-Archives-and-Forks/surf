{
  "name": "horizon",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:desktop": "turbo dev --filter=desktop",
    "build": "turbo build",
    "build:packages": "turbo build --filter=!desktop",
    "build:desktop": "yarn workspace desktop build",
    "build:desktop:mac": "yarn workspace desktop build:mac",
    "build:desktop:win": "yarn workspace desktop build:win",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@horizon/eslint-config": "*",
    "@horizon/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "electron",
      "electron-builder",
      "electron-vite"
    ]
  }
}

{
  "name": "horizon",
  "private": true,
  "scripts": {
    "dev": "cross-env M_VITE_PRODUCT_NAME=Horizon-dev turbo dev",
    "dev:horizon": "npm run dev -- --filter=horizon",
    "build": "turbo build",
    "build:packages": "turbo build --filter=!horizon",
    "build:horizon": "yarn workspace horizon build",
    "build:horizon:mwl": "yarn turbo run horizon#build:mwl",
    "build:horizon:mac": "yarn turbo run horizon#build:mac",
    "build:horizon:mac:x64": "yarn turbo run horizon#build:mac:x64",
    "build:horizon:mac:arm": "yarn turbo run horizon#build:mac:arm",
    "build:horizon:win:x64": "yarn turbo run horizon#build:win:x64",
    "build:horizon:linux": "yarn turbo run horizon#build:linux",
    "build:backend": "yarn turbo run @horizon/backend#build",
    "build:tela": "yarn workspace @horizon/tela build",
    "build:cmdk": "yarn workspace @horizon/cmdk-sv",
    "lint": "turbo lint",
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore --write \"**/*.{js,ts,tsx,yml,json,md,svelte}\"",
    "prepare": "husky",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@horizon/eslint-config": "*",
    "@horizon/typescript-config": "*",
    "cross-env": "^7.0.3",
    "husky": "^9.0.10",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "electron",
      "electron-builder",
      "electron-vite"
    ]
  }
}

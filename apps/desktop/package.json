{
  "name": "horizon",
  "productName": "Horizon",
  "version": "0.0.1",
  "main": "./out/main/index.js",
  "author": "Deta GmbH",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:mwl": "npm run build && electron-builder -mwl --config build/electron-builder-config.ts --arm64 --x64 --publish always",
    "build:win": "npm run build && electron-builder --win --config build/electron-builder-config.ts --arm64 --x64 --publish always",
    "build:mac": "npm run build && electron-builder --mac --config build/electron-builder-config.ts --arm64 --x64 --publish always",
    "build:linux": "npm run build && electron-builder --linux --config build/electron-builder-config.ts --arm64 --x64 --publish always"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.15",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@sentry/svelte": "^7.99.0",
    "@sentry/vite-plugin": "^2.14.0",
    "cross-fetch": "^4.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/fuses": "^1.7.0",
    "@horizon/core": "*",
    "@horizon/types": "*",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@types/node": "^18.17.5",
    "electron": "25.9.8",
    "electron-builder": "^24.9.1",
    "electron-context-menu": "^3.6.1",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-svelte": "^2.32.4",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}

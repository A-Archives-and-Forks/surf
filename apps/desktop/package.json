{
  "name": "desktop",
  "productName": "Surf",
  "version": "0.0.1",
  "main": "./out/main/index.js",
  "author": "Deta GmbH",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node",
    "start": "electron-vite preview",
    "dev": "node scripts/dev.js",
    "build:typecheck": "npm run typecheck && electron-vite build",
    "build": "electron-vite build",
    "build:mwl": "npm run build && electron-builder -mwl --config build/electron-builder-config.js --arm64 --x64 --publish always",
    "build:mac": "npm run build && electron-builder --mac --config build/electron-builder-config.js --arm64 --x64 --publish always",
    "build:mac:x64": "npm run build && electron-builder --mac --config build/electron-builder-config.js --x64 --publish always",
    "build:mac:arm": "npm run build && electron-builder --mac --config build/electron-builder-config.js --arm64 --publish always",
    "build:lin:x64": "npm run build && electron-builder --linux --config build/electron-builder-config.js --x64 --publish always",
    "build:lin:arm": "npm run build && electron-builder --linux --config build/electron-builder-config.js --arm64 --publish always",
    "build:win:x64": "npm run build && electron-builder --win --config build/electron-builder-config.js --x64 --publish always"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.15",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@horizon/backend": "*",
    "@rollup/plugin-replace": "^5.0.7",
    "@sentry/svelte": "^7.99.0",
    "cross-fetch": "^4.0.0",
    "electron-updater": "^6.1.7",
    "html-minifier": "^4.0.0",
    "mime-types": "^2.1.35",
    "svelte-dnd-list": "^0.1.8"
  },
  "devDependencies": {
    "7zip-min": "^1.4.4",
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/fuses": "^1.7.0",
    "@horizon/api": "*",
    "@horizon/core": "*",
    "@horizon/editor": "*",
    "@horizon/types": "*",
    "@horizon/web-parser": "*",
    "@sentry/vite-plugin": "^2.14.2",
    "@svelte-plugins/tooltips": "^3.0.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^18.17.5",
    "autoprefixer": "^10.4.19",
    "electron": "28.2.4",
    "electron-builder": "^24.9.1",
    "electron-context-menu": "^3.6.1",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-svelte": "^2.32.4",
    "openai": "^4.28.4",
    "postcss": "^8.4.38",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "vite": "^4.4.9",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-markdown": "^2.2.0"
  }
}

{
  "extends": "@horizon/typescript-config/base.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js", "@deta/web-parser/src/vite-env.d.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  }
}